# .env.example - Copy this to .env and fill in your values

# ============================================================================
# AI Configuration (Local LLM Backend)
# ============================================================================

# URL of the LLM backend service (backend_llm_api/llm_service.py)
# Default: http://localhost:8000 (local Flask server)
LLM_API_URL=http://localhost:8000

# API key for authenticating with the LLM backend
# Must match the LLM_API_KEY set in the backend service
LLM_API_KEY=prod_secret_key_123

# Request timeout for LLM calls in seconds (local models can be slow)
LLM_REQUEST_TIMEOUT=120

# ============================================================================
# Database Configuration
# ============================================================================

# Enable database mode (set to 'true' to use PostgreSQL, 'false' for JSON)
USE_DATABASE=false

# PostgreSQL Connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://dinero_user:dinero_pass@localhost:5432/dinero_ai

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ============================================================================
# Application Settings
# ============================================================================

# Environment (development, production)
ENVIRONMENT=development

# Logging level
LOG_LEVEL=INFO
